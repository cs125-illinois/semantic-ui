{
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@cs125/semantic-ui": ["./src/"]
    }
  }
}
